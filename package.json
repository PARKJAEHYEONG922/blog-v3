{
  "name": "blog-automation-v3",
  "version": "3.0.7",
  "description": "AI 블로그 자동화 툴 v3 - 클로드 웹 연동",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build:quick && concurrently \"webpack --mode development --watch\" \"nodemon --watch dist --ext js --exec electron dist/main.js\"",
    "build": "webpack --mode production && electron-builder",
    "build:quick": "webpack --mode development",
    "start:prod": "cross-env NODE_ENV=production electron dist/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "keywords": [
    "blog",
    "automation",
    "ai",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "css-loader": "^6.11.0",
    "electron": "38.1.1",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "sharp": "^0.34.4",
    "style-loader": "^3.3.4",
    "to-ico": "^1.1.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "electron-store": "^11.0.0",
    "google-trends-api": "^4.9.2",
    "marked": "^9.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.3",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.parkjaehyeong922.blog-automation-v2",
    "productName": "블로그 자동화",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/playwright/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "shortcutName": "블로그 자동화",
      "allowElevation": true,
      "deleteAppDataOnUninstall": false,
      "include": "scripts/installer.nsh"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "certificateFile": null,
      "certificatePassword": null
    },
    "afterPack": "scripts/afterPack.js",
    "publish": {
      "provider": "github",
      "owner": "PARKJAEHYEONG922",
      "repo": "blog-automation-v2"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ]
  }
}
